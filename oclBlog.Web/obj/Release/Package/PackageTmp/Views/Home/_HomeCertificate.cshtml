@model IEnumerable<ocLBlog.Entities.Models.Certificate>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="col-md-4 portfolio clean col-sm-6 col-xs-12 col wow fadeInUp" data-wow-delay=".1s">
        <div class="portfolio-wrap">
            <div class="overlay">
                <h3>@item.Title</h3>
                <p>@item.Subtitle</p>
                <p>Certificate Date: @item.CertificateDate.ToShortDateString()</p>
                <p>@item.FromWhere</p>
            </div>
            <div class="portfolio-img">
                <img src="~/img/certificate/@item.Photo" style="max-height:300px;max-width:430px;min-width:430px;min-height:300px" alt="@item.Title" />
            </div>
        </div>
    </div>
}
