@model ICollection<ocLBlog.Entities.Models.About>
@{
    ViewBag.Title = "Hakkımda Bölümü";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/About/Create" class="btn btn-primary">Hakkımda Bilgisi Ekle</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th width="90">Resim</th>
                                    <th>Ad Soyad</th>
                                    <th>Başlık</th>
                                    <th>Eklenme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="~/img/about/@item.Photo" class="img-responsive" /></td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Title</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            <a href="~/About/AboutDetail/@item.Id"><button class="btn btn-info btn-xs"><i class="icon-trash ">Detaya Bak</i></button></a>
                                            <a href="~/About/Edit/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-trash ">Güncelle</i></button></a>
                                            <a href="~/About/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
