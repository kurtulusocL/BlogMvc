@model ocLBlog.Entities.Models.About
@{
    ViewBag.Title = "AboutDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-sm-10">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/About/yonas" class="btn btn-primary">Hakkımda Admin Sayfasına Dön</a> || <a href="~/About/Delete/@Model.Id" class="btn btn-danger">Bilgileri Sil</a>
                        </header>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Altbaşlık</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>@Model.Subtitle</td>
                                    <td>@Model.Description</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>