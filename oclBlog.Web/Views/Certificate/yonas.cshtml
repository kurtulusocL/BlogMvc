@using PagedList
@using PagedList.Mvc
@model IPagedList<ocLBlog.Entities.Models.Certificate>
@{
    ViewBag.Title = "Sertifikalarım";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/Certificate/Create"><button class="btn btn-primary">Yeni Sertifika Ekle</button></a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th width="90">Resim</th>
                                    <th>Başlık</th>
                                    <th>Altbaşlık</th>
                                    <th>Sertifika Tarihi</th>
                                    <th>Eklenme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="90"><img src="~/img/certificate/@item.Photo" class="img-responsive" /></td>
                                        <td>@item.Title</td>
                                        <td>@item.Subtitle</td>
                                        <td>@item.CertificateDate.ToShortDateString()</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            <a href="~/Certificate/Edit/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-trash ">Güncelle</i></button></a>
                                            <a href="~/Certificate/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
            <div class="pagination" align="center">
                <div class="pagination-large">
                    @Html.PagedListPager(Model, Page => Url.Action("yonas", new { Page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </section>
    </section>
</section>
