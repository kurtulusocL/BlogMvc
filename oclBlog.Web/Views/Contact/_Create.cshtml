@model ocLBlog.Entities.Models.Contact
@{
    Layout = null;
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["success"]</span>
    </div>
}
else
{
    <div class="alert alert-success">
        <span>@TempData["error"]</span>
    </div>
}


@using (Html.BeginForm("_Create", "Contact", FormMethod.Post))
{
    <form action="mail.php" method="post" id="cf">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <input type="text" placeholder="Name-Surname" id="fname" name="NameSurname">
            </div>
            <div class="col-sm-6 col-xs-12">
                <input type="email" placeholder="Email" id="email" name="MailAddress">
            </div>
            <div class="col-xs-12">
                <input type="text" placeholder="Subject" id="subject" name="Subject">
            </div>
            <div class="col-xs-12">
                <textarea class="contact-textarea" placeholder="Message" id="msg" name="Text"></textarea>
            </div>
            <div class="col-xs-12">
                <div class="g-recaptcha" data-sitekey="6LcEEtkUAAAAAMulO9spSkNx0n4XS_YDFhyI4bEN"></div>
                <button id="submit" class="cont-submit btn-contact" name="submit">Send Form</button>
            </div>
        </div>
    </form>
}
