@model IEnumerable<ocLBlog.Entities.Models.SocialMedia>
@{
    ViewBag.Title = "Sosyal Medya Hesaplarım";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title || <a href="~/SocialMedia/yonas" class="btn btn-primary" target="_blank">Yeni Sosyal Medya Hesabı Ekle</a> |</a>
                        </header>
                        <table class="table table-striped table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>Facebook</th>
                                    <th>Instagram</th>
                                    <th>LinkedIn</th>
                                    <th>Mail Adresi</th>
                                    <th>GitHub</th>
                                    <th>Eklenme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a href="@item.Facebook" class="btn btn-info" target="_blank">Facebook</a></td>
                                        <td><a href="@item.Instagram" class="btn btn-default" target="_blank">Instagram</a></td>
                                        <td><a href="@item.LinkedIn" class="btn btn-primary" target="_blank">LinkedIn</a></td>
                                        <td><a href="mailto:@item.MailAddress" class="btn btn-warning" target="_blank">Mail Adresi</a></td>
                                        <td><a href="@item.GitHub" class="btn btn-success" target="_blank">GitHub</a></td>
                                        <td><a href="@item.Udemy" class="btn btn-default" target="_blank">Udemy</a></td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td>
                                            <a href="~/SocialMedia/Edit/@item.Id"><button class="btn btn-success btn-xs"><i class="icon-trash ">Güncelle</i></button></a>
                                            <a href="~/SocialMedia/Delete/@item.Id"><button class="btn btn-danger btn-xs"><i class="icon-trash ">Sil</i></button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>
