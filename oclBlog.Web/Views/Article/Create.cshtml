@model ocLBlog.Entities.Models.Article
@{
    ViewBag.Title = "Yeni Makale Yayınla";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            @ViewBag.Title
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" enctype="multipart/form-data" action="">
                                    @using (Html.BeginForm("Create", "Article", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">İlan Kategorisi: *</label>
                                            <div class="col-lg-10">
                                                @Html.DropDownListFor(i => i.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name", new { @class = "form-control" }))
                                                @Html.ValidationMessageFor(i => i.CategoryId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                      
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Makale Başlığı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Title" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Makale Altbaşlığı</label>
                                            <div class="col-lg-10">
                                                <input class=" form-control" id="firstname" name="Subtitle" type="text" required />
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="ccomment" class="control-label col-lg-2">Makale Metni</label>
                                            <div class="col-lg-10">
                                                <textarea class="form-control " id="ccomment" name="text"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="ccomment" class="control-label col-lg-2">Makale İkincil Metin</label>
                                            <div class="col-lg-10">
                                                <textarea class="form-control " id="ccomment" name="Subtext"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <label for="ccomment" class="control-label col-lg-2">Makale Detayı</label>
                                            <div class="col-lg-10">
                                                <textarea class="form-control " id="ccomment" name="Detail"></textarea>
                                            </div>
                                        </div>
                                        <hr />
                                        <h4><label class="label label-warning">Makale Etiketleri</label></h4>
                                        <hr />
                                        <div class="form-group ">
                                            <label for="firstname" class="control-label col-lg-2">Makale Etiketleri: *</label>
                                            <div class="col-lg-10">
                                                <textarea class="form-control " id="ccomment" name="Tag.Name" required=""></textarea>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-lg-offset-2 col-lg-10">
                                                <button class="btn btn-primary" type="submit">Makale Bilgilerini Ekle</button>
                                                <a href="~/Article/yonas"><button class="btn btn-danger" type="button">İptal Et</button></a>
                                            </div>
                                        </div>
                                    }
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
</section>